extends layout

block content
  h1= title
  -var items = results
    
    div(class="container-fluid")
    div(class="row")
        each item,index in items
            div(class="col-sm-2" onclick=`buy(${index})`)
                p material:  #{item.material}
                p colour: #{item.colour}
                p cost: #{item.cost}
                
    script.
      function buy(index)
      {
        alert(`You purchased item ${index+1}.`)
      }